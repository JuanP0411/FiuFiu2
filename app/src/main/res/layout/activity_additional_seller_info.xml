<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".seller.AdditionalSellerInfoActivity">

    <Button
        android:id="@+id/sellerAdditionalInfoBackBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape_circle"
        android:backgroundTint="#009688"
        android:foregroundGravity="center"
        android:fontFamily="@font/mada_medium"
        android:gravity="center"
        android:isScrollContainer="false"
        app:cornerRadius="24dp"
        app:iconGravity="top"
        app:iconPadding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/sellerSignupBtn"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:background="@drawable/style_bottom"
        android:backgroundTint="#009688"
        android:fontFamily="@font/mada_medium"
        android:text="Registrarme"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/mada_medium"
        android:gravity="center"
        android:text="¡Cuentanos tu especialidad!"
        android:textColor="@color/bGradient"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sellerAdditionalInfoBackBtn"
        app:layout_constraintTop_toBottomOf="@+id/sellerAdditionalInfoBackBtn" />

    <EditText
        android:id="@+id/sellerInfoDescriptionTextField"
        android:layout_width="258dp"
        android:layout_height="72dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/shaping_plain_text"
        android:ems="10"
        android:fontFamily="@font/mada_medium"
        android:gravity="start|top"
        android:hint="descripción completa"
        android:inputType="textMultiLine"
        android:textColor="@color/bGradient"
        android:textColorHint="@color/bGradient"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/signUpMarketNameTextField"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/signUpMarketNameTextField"
        app:layout_constraintTop_toBottomOf="@+id/signUpMarketNameTextField" />

    <EditText
        android:id="@+id/marketShortDescriptionTextField"
        android:layout_width="258dp"
        android:layout_height="72dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shaping_plain_text"
        android:ems="10"
        android:fontFamily="@font/mada_medium"
        android:gravity="start|top"
        android:hint="¿que haces?"
        android:inputType="textMultiLine"
        android:textColor="@color/bGradient"
        android:textColorHint="@color/bGradient"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/signUpMarketNameTextField"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/signUpMarketNameTextField"
        app:layout_constraintTop_toBottomOf="@+id/signUpMarketNameTextField" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <ImageView
            android:id="@+id/marketImageProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/avatar_icon" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/signUpMarketNameTextField"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/shaping_plain_text"
        android:ems="10"
        android:fontFamily="@font/mada_medium"
        android:hint="nombra tu especialidad!"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/bGradient"
        android:textColorHint="@color/bGradient"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/sellerAdditionalInfoBackBtn"
        app:layout_constraintEnd_toEndOf="@+id/sellerAdditionalInfoBackBtn"
        app:layout_constraintStart_toStartOf="@+id/sellerAdditionalInfoBackBtn"
        app:layout_constraintTop_toTopOf="@+id/sellerAdditionalInfoBackBtn"
        app:srcCompat="@drawable/back_arrow_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>